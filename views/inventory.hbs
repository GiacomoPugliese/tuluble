                        {{/if}} --}}

                        <td>
                            <div class="delete_button">
                            <a href="archive-ingredient/{{this.ingredient_id}}" class="btn waves-effect waves-light">Archive</a>
                            </div>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
