                <option value="8">Experimental</option>
                <option value="9">Colorants</option>
                <option value="10">Absorbents</option>
                <option value="11">pH Adjusters (Acids)</option>
                <option value="12">pH Adjusters (Bases)</option>
                <option value="13">Distilled Water/Ethyl Alcohol</option>
            </select>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            
            <script>
                function myfunc() {
                    console.log("hello");
                }
                $(document).ready(function(){
                    $('browser-default').formSelect();
                    $('.modal').modal();
                });

                $('browser-default').formSelect('myfunc');
                // $('select').formSelect('methodName', paramName);

            </script>

         
           
            <div class="col s12 m4 l2">
